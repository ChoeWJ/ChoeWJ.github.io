                  <a href="{{ subitem.url }}">
                    {{ subitem.title }} <span class="count">({{ subitem_count }})</span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li data-icon="ðŸ“Œ">
            <a href="{{ item.url }}">
              {{ item.title }} <span class="count">({{ item_count }})</span>
            </a>
          </li>
