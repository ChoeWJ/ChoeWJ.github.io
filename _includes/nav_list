              {% for subitem in item.subcategories %}
                {% assign subitem_count = 0 %}
                {% for post in site.posts %}
                  {% if post.categories contains subitem.title %}
                    {% assign subitem_count = subitem_count | plus: 1 %}
                  {% endif %}
                {% endfor %}
